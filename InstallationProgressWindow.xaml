<Window x:Class="TizenSigner.InstallationProgressWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TizenSigner"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Title="Installeren van Tizen CLI Tools" Height="150" Width="300"
             WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="10"/>
            <TextBlock Text="Installeren van Tizen CLI tools..." Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>